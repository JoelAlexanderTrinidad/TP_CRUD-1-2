<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de registro</h2>
			</div>
		</div>
		<div class="col-6 mx-auto">
			<form method="POST" action="/users/register">
				<div class="row product-detail">
					<div class="col-12">
						<label for="name" class="form-label">Nombre:</label>
						<input type="text" id="name" name="name" class="form-input <%= locals.errors && errors.name ? 'is-invalid' : null %>" value="<%= locals.old && old.name ? old.name : null %>">
						<span style="color: red;font-size: 16px;"><%= locals.errors && errors.name ? errors.name.msg : null %></span>

					</div>
					<div class="col-12">
						<label for="lastName" class="form-label">Apellido:</label>
						<input type="text" id="lastName" name="lastName" value="<%= locals.old && old.lastName ? old.lastName : null %>" class="form-input">
						<span style="color: red;font-size: 16px;"><%= locals.errors && errors.lastName ? errors.lastName.msg : null %></span>
					</div>
					<div class="col-12">
						<label for="email" class="form-label">Email:</label>
						<input type="email" id="email" name="email" class="form-input" value="<%= locals.old && old.email? old.email : null %>">
						<span style="color: red; font-size: 16px;"><%= locals.errors && errors.email ? errors.email.msg : null %></span>
					</div>
					<div class="col-12">
						<label for="password" class="form-label">Contraseña:</label>
						<input type="password" id="password" name="password" class="form-input">
						<span style="color: red; font-size: 16px;"><%= locals.errors && errors.password ? errors.password.msg : null %></span>

					</div>					
					<div class="col-12">
						<button type="submit" class="buy-now-button mx-auto">Registrarse</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
	
</body>	
</html>